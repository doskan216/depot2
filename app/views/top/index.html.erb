<h1>ようこそ</h1>

<div id="cart">
<p>カートNo:<%= @cart.id %></p>
<p>カートの中身は<%= @cart.cart_items.count %>個の商品があります。</p>
<p><%= link_to('カートを表示する',cart_path) %></p>
</div>


<ul class="media-list">
<% @products.each do |product| %>
  <li class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="<%= product.image %>" alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= product.name %></h4>
      <p><%= product.description %></p>
      <p><%= number_to_currency(product.price) %></p>
      <%= button_to('カートに追加', cart_items_path(product_id: product),class: 'btn btn-primary') %>
    </div>
  </li>
  <%end%>
</ul>

<%= paginate @products %>
