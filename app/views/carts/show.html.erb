<h1>カート</h1>

<table class="table table-striped">
 <thead>
  <tr>
    <th>No</th>
    <th>商品名</th>
    <th>価格</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @cart.cart_items.each_with_index do |item, i| %>
  <tr>
    <td><%= i+1 %></td>
    <td><%= item.product.name %></td>
    <td><%= number_to_currency(item.product.price) %></td>
    <td>削除</td>
  </tr>
  <% end %>
</tbody>
</table>

